# X API Keys (from https://developer.twitter.com/)
TWITTER_API_KEY=your_api_key_here
TWITTER_API_SECRET=your_api_secret_here
TWITTER_ACCESS_TOKEN=your_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_access_token_secret_here
TWITTER_BEARER_TOKEN=your_bearer_token_here

# OpenAI API Key (from https://platform.openai.com/)
OPENAI_API_KEY=your_openai_api_key_here

# Bot Configuration
BOT_USERNAME=your_x_username
BOT_NAME=YourBotName
DEBUG_MODE=true
DRY_RUN=true  # Set to false when ready to interact with X
LITE_MODE=false  # Set to true for minimal API usage (could work with free tier)

# Database
DATABASE_URL=sqlite:///xbot.db

# Rate Limiting (tweets per hour) - Conservative defaults to save costs
MAX_TWEETS_PER_HOUR=10
MAX_LIKES_PER_HOUR=50
MAX_RETWEETS_PER_HOUR=5

# AI Configuration
PERSONALITY_MODEL=gpt-4
RESPONSE_TEMPERATURE=0.7
MAX_RESPONSE_LENGTH=280

# Content Filtering
MIN_ENGAGEMENT_SCORE=0.6
AVOID_CONTROVERSIAL_TOPICS=true
SAFE_MODE=true
